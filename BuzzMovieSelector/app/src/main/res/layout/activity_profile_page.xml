<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="edu.gatech.cs2340.buzzmovieselector.ProfilePageActivity">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/profilePic"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Major"
        android:id="@+id/userMajor"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Username"
        android:id="@+id/userName"
        android:layout_below="@+id/profilePic"
        android:layout_above="@+id/userMajor"
        android:layout_alignRight="@+id/profilePic"
        android:layout_alignEnd="@+id/profilePic"
        android:layout_alignLeft="@+id/profilePic"
        android:layout_alignStart="@+id/profilePic"
        android:textAlignment="center" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="  Gender:"
        android:id="@+id/genderLabel"
        android:textAlignment="center"
        android:textStyle="bold"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:layout_below="@+id/userMajor"
        android:layout_alignLeft="@+id/userMovieInterests"
        android:layout_alignStart="@+id/userMovieInterests"
        android:layout_toLeftOf="@+id/userGender"
        android:layout_toStartOf="@+id/userGender" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Movie Interests:"
        android:id="@+id/movieInterestsLabel"
        android:textAlignment="center"
        android:layout_below="@+id/genderLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="M/F"
        android:id="@+id/userGender"
        android:layout_below="@+id/userMajor"
        android:layout_toRightOf="@+id/movieInterestsLabel"
        android:layout_toEndOf="@+id/movieInterestsLabel" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="User Movie Interests"
        android:id="@+id/userMovieInterests"
        android:layout_below="@+id/movieInterestsLabel"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
